<h1>Cocktails</h1>

<h2>thecocktaildb.com</h2>

<div><%= link_to "Create new cocktail", new_cocktail_path %></div>

<ul>
  <% @cocktails.each do |cocktail| %>
  <li>
    <%= cl_image_tag cocktail.photo, height: 150, width: 150, crop: :fill %>
    <%= link_to cocktail.name, cocktail_path(cocktail) %>
  </li>
  <% end %>
</ul>
